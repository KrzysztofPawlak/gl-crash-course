<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable
                name="name"
                type="String"/>

        <variable
                name="temp"
                type="String"/>

        <variable
                name="icon"
                type="String"/>

        <variable name="id" type="Integer"/>

        <variable name="id_api" type="Integer"/>

        <variable name="refreshed" type="String"/>

        <variable
                name="listener"
                type="com.example.gl_crash_course.forecastlist.view.ForecastAdapter.OnCityClickListener"/>
    </data>
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/list_item"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:strokeColor="@color/colorAccent"
            app:strokeWidth="2dp"
            app:cardUseCompatPadding="true"
            android:onClick="@{() -> listener.onCityClick(id_api)}">
        <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">
            <ImageView
                    android:id="@+id/iv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_launcher" android:contentDescription="TODO"
                    android:imageUrl="@{icon}"/>
            <TextView
                    android:id="@+id/tvName"
                    android:text="@{name}"
                    android:textSize="@dimen/weater_detal_font_size"
                    android:layout_toEndOf="@id/iv"
                    android:paddingHorizontal="@dimen/weater_detal_padding_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvTemp"
                    android:text="@{temp}"
                    android:textSize="@dimen/weater_detal_font_size"
                    android:layout_toEndOf="@id/iv"
                    android:layout_below="@id/tvName"
                    android:paddingHorizontal="@dimen/weater_detal_padding_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:id="@+id/tvRefreshDate"
                    android:text="@{refreshed}"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/iv"
                    android:layout_below="@id/tvTemp"
                    android:paddingHorizontal="@dimen/weater_detal_padding_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>